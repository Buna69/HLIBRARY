import 'package:flutter/material.dart';
import 'package:carousel_slider/carousel_slider.dart';
class BookCarousel extends StatefulWidget {
  const BookCarousel({super.key});

class Book {
  final String genre;
  final String name;
  final String imageUrl;

  Book({required this.genre, required this.name, required this.imageUrl});
}

class BookCarousel extends StatefulWidget {
  @override
  _BookCarouselState createState() => _BookCarouselState();
}

class _BookCarouselState extends State<BookCarousel> {
  final List<Book> books = [
    Book(genre: 'Mystery', name: 'Book 1', imageUrl: 'assets/images/goku.jpg'),
    Book(genre: 'Fantasy', name: 'Book 2', imageUrl: 'assets/images/google.png'),
    Book(genre: 'Sci-Fi', name: 'Book 3', imageUrl: 'assets/images/logo.png'),
    // Add more books with different genres
  ];

  @override
  Widget build(BuildContext context) {
    return CarouselSlider.builder(
      itemCount: books.length * 100, // A large number to create the infinite effect
      options: CarouselOptions(
        viewportFraction: 0.8,
        enlargeCenterPage: true,
        autoPlay: true,
      ),
      itemBuilder: (context, index, realIndex) {
        final book = books[index % books.length];
        return Container(
          child: Column(
            children: [
              Text(
                book.genre,
                style: TextStyle(fontSize: 18.0, fontWeight: FontWeight.bold),
              ),
              SizedBox(height: 8.0),
              Image.asset(
                book.imageUrl,
                height: 150.0, // Set your desired image height
                width: double.infinity,
                fit: BoxFit.cover,
              ),
              SizedBox(height: 8.0),
              Text(
                book.name,
                style: TextStyle(fontSize: 16.0, fontWeight: FontWeight.bold),
              ),
            ],
          ),
        );
      },
    );
  }
  }
}
